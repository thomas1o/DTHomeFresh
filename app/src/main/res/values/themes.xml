<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/green_5</item>
        <item name="colorPrimaryDark">@color/green_1</item>
    </style>

    <style name="Theme.DTHomeFresh" parent="AppTheme">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/green_2</item>
        <item name="android:statusBarColor">@color/green_2</item>
    </style>

    <style name="Theme.DTHomeFreshSplashScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/green_6</item>
        <item name="android:statusBarColor">@color/green_6</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>